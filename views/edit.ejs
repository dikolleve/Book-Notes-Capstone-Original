<%- include("partials/header") %>

<div class="bg-gray-200 min-h-screen flex justify-center align-center items-center">
    <div class="bg-white w-full max-w-md p-5 shadow rounded-md">
        <h1 class="text-xl">Edit Book</h1>
        <form action="/book-notes/edit/<%= book.id %>" method="POST" class="mt-3 space-y-2">  
            <div>
                <label for="title" class="block font-medium mb-1">Title</label>
                <input type="text" name="title" class="border w-full focus:outline-none focus:ring-2 focus:ring-blue-500 px-3 py-2 rounded" value="<%= book.title %>" required>
            </div>
            <div>
                <label for="author" class="block font-meduim mb-1">Author</label>
                <input type="text" name="author" class="border w-full focus:outline-none focus:ring-2 focus:ring-blue-500 px-3 py-2 rounded" value="<%= book.author %>" required>
            </div>
            <div>
                <label for="rating" class="block font-medium mb-1">Rating (1-5)</label>
                <input type="number" name="rating" class="border w-full focus:outline-none focus:ring-2 focus:ring-blue-500 px-3 py-2 rounded" min="1" max="5" value="<%= book.rating %>" required>
            </div>
            <div>
                <label for="notes" class="block mb-1 font-medium">Notes</label>
                <textarea name="notes" rows="5" class="border w-full focus:outline-none focus:ring-2 focus:ring-blue-500 px-3 py-2 rounded" required><%= book.notes %></textarea>
            </div>
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-2 rounded-md">Update Book</button>
        </form>
    </div>
</div>